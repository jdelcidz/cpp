#include <iostream>

using namespace std;

int main(int argc, char** argv){
        /*Definiendo variables*/
        float a, b, c, su, prom, prod;

        /*Ingreso de los datos*/
        cout << "ingrese el primer entero: ";
        cin >> a;
        cout << " ingrese el segundo entero: ";
        cin >> b;
        cout << " ingrese el tercer entero: ";
        cin >> c;

        /*Realizando los calculos*/
        su = a+b+c;
        prom=su/3;
        prod = a*b*c;

        /*Determinando mayor y menor valor*/


        /*Mostrando los resultados*/
        cout << "El valor de la suma  de los valores: " << a << "+" << b << "+" << c << "=" << su << endl;
        cout << "El valor del promdio de los valores: " << a << "," << b << "," << c << "=" << prom << endl;
        cout << "El producto de los valores: "  << a << " X " << b << " X " << c << " = " << prod << endl;


        return 0;

}

